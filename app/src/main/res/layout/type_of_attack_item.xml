<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:id="@+id/typeOfAttacksLinearLayoutItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/pokemonNameTypeOfAttack"
            style="@style/TypeOfAttackPointTableItem"
            android:layout_weight="2"
            android:text="Удар" />

        <TextView
            android:id="@+id/pokemonCostTypeOfAttack"
            style="@style/TypeOfAttackPointTableItem"
            android:layout_weight="2"
            android:text="Lighting" />

        <TextView
            android:id="@+id/pokemonDamageTypeOfAttack"
            style="@style/TypeOfAttackPointTableItem"
            android:layout_weight="1"
            android:text="10" />

        <TextView
            android:id="@+id/pokemonEnergyCostTypeOfAttack"
            style="@style/TypeOfAttackPointTableItem"
            android:layout_weight="1"
            android:text="2" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EEEEEE"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/typeOfAttacksLinearLayoutItem" />

</android.support.constraint.ConstraintLayout>