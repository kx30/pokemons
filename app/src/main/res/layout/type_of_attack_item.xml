<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:ndroid="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/costTypeOfAttack"
        style="@style/DetailCardTextView"
        android:text="Cost:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pokemonCostTypeOfAttack"
        style="@style/PokemonTypeOfAttackTextView"
        android:layout_width="0dp"
        ndroid:breakStrategy="simple"
        android:text="Grass, Colorless, Grass"
        app:layout_constraintStart_toEndOf="@id/costTypeOfAttack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/nameTypeOfAttack"
        style="@style/DetailCardTextView"
        android:text="Name:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pokemonCostTypeOfAttack" />

    <TextView
        android:id="@+id/pokemonNameTypeOfAttack"
        style="@style/PokemonTypeOfAttackTextView"
        android:text="Knock out"
        app:layout_constraintStart_toEndOf="@id/nameTypeOfAttack"
        app:layout_constraintTop_toBottomOf="@id/pokemonCostTypeOfAttack" />

    <TextView
        android:id="@+id/damageTypeOfAttack"
        style="@style/DetailCardTextView"
        android:text="Damage:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameTypeOfAttack" />

    <TextView
        android:id="@+id/pokemonDamageTypeOfAttack"
        style="@style/PokemonTypeOfAttackTextView"
        android:text="40"
        app:layout_constraintStart_toEndOf="@id/damageTypeOfAttack"
        app:layout_constraintTop_toBottomOf="@id/nameTypeOfAttack" />

    <TextView
        android:id="@+id/energyCostTypeOfAttack"
        style="@style/DetailCardTextView"
        android:text="Energy cost:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/damageTypeOfAttack" />

    <TextView
        android:id="@+id/pokemonEnergyCostTypeOfAttack"
        style="@style/PokemonTypeOfAttackTextView"
        android:text="2"
        app:layout_constraintStart_toEndOf="@id/energyCostTypeOfAttack"
        app:layout_constraintTop_toBottomOf="@id/damageTypeOfAttack" />

</android.support.constraint.ConstraintLayout>